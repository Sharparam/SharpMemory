<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<GridPane fx:controller="com.sharparam.sharpmemory.controllers.MenuController"
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>
    <Text text="Welcome to SharpMemory! Set your options..."
        GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />
    <Button text="Start memory!" GridPane.columnIndex="0" GridPane.rowIndex="1"
        onAction="#handleStartButtonAction" />
    <Button text="Quit game" GridPane.columnIndex="1" GridPane.rowIndex="1"
        onAction="#handleQuitButtonAction" />

    <stylesheets>
        <URL value="@../styles/menu.css" />
    </stylesheets>
</GridPane>
