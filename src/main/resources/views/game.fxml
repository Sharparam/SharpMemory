<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<GridPane fx:controller="com.sharparam.sharpmemory.controllers.GameController"
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
    fx:id="window">

    <Text id="points" fx:id="pointsText" text="Points: 0"
        GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Text id="tries" fx:id="triesText" text="Tries: 0"
        GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Text id="time" fx:id="timeText" text="00:00"
        GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <Button id="menu" text="Menu" onAction="#handleMenuButtonAction"
        GridPane.columnIndex="3" GridPane.rowIndex="0" />
    <Button id="quit" text="Quit game" onAction="#handleQuitButtonAction"
        GridPane.columnIndex="4" GridPane.rowIndex="0" />
    <Text id="game-over" fx:id="gameOverText" text="Game Over!" visible="false"
        GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="5" />

    <stylesheets>
        <URL value="@../styles/game.css" />
    </stylesheets>
</GridPane>
